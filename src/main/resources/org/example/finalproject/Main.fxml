<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" prefWidth="600" prefHeight="600" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.finalproject.MainController">
    <ImageView fx:id="imageView" fitWidth="100" fitHeight="100" preserveRatio="true"/>
    <Button fx:id="uploadButton" text="Upload Image" onAction="#handleUpload"/>
    <Label text="Convert to Format:"/>
    <ComboBox fx:id="formatComboBox"/>
    <Button fx:id="downloadButton" text="Download Converted Image" onAction="#handleDownload"/>
    <VBox fx:id="imageInfoBox" spacing="10.0"/>
</VBox>

